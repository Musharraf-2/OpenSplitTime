<%# locals: (presenter:, event:, message:) -%>

<% message ||= nil %>

<%= content_tag(:div, id: dom_id(event, :sync_efforts_card)) do %>
  <div class="card my-3">
    <div class="card-header">
      <div class="row">
        <div class="col">
          <h4 class="mt-1"><%= event.name %></h4>
        </div>
        <% if message.present? %>
          <div class="col">
            <p class="text-muted text-end"><%= message %></p>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <label>Select corresponding external events</label>
      <% presenter.external_events(event).each do |external_event| %>
        <%= render partial: "events/connections/syncable_switch",
                   locals: {
                     event_group: presenter.event_group,
                     event: event,
                     external_id: external_event.id,
                     external_name: external_event.name,
                     service: presenter.service,
                   } %>
      <% end %>
      <div class="row mt-3">
        <div class="col">
          <%= render partial: "events/connectors/services/preview_sync_button",
                     locals: {
                       event: event,
                       service_identifier: presenter.service_identifier,
                     } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
