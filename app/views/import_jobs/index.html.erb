<% content_for :title do %>
  <% "OpenSplitTime: My stuff - #{@user.full_name}" %>
<% end %>

<% content_for(:container_type) do %>skip
<% end %>

<%= turbo_stream_from @user %>

<header class="ost-header">
  <div class="container">
    <div class="ost-heading row">
      <div class="col">
        <div class="ost-title">
          <h1><strong><%= @user.full_name %></strong></h1>
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><%= current_user&.admin? ? (link_to 'Users', users_path) : 'Users' %></li>
            <li class="breadcrumb-item"><%= link_to @user.full_name, user_path(@user) %></li>
            <li class="breadcrumb-item active">Import Jobs</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<article class="ost-article container">
  <table class="table table-condensed table-striped">
    <thead>
    <tr>
      <th>Parent Type</th>
      <th>Parent ID</th>
      <th>Format</th>
      <th>Row Count</th>
      <th>Elapsed Time</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody id="import_jobs">
    <% @user.import_jobs.each do |job| %>
      <%= render "import_job", :import_job => job %>
    <% end %>
    </tbody>
  </table>
</article>
