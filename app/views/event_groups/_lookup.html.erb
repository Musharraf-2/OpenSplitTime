<%= form_tag event_groups_path, class: "w-100", method: :get do %>
  <div class="input-group">
    <%= text_field_tag :search,
                       params[:search],
                       placeholder: "Event name",
                       autofocus: true,
                       class: "form-control search-box" %>
    <%= button_tag(type: :submit, id: "event-group-lookup-submit", class: "btn btn-primary input-group-text") do %>
      <i class="fas fa-search"></i>
    <% end %>
  </div>
<% end %>
