<%# locals: (presenter:) -%>

<aside class="ost-toolbar">
  <div class="container">
    <div class="row">
      <div class="col">
        <%= link_to fa_icon("plus", text: "Add a partner"),
                    new_organization_event_group_partner_path(presenter.organization, presenter.event_group),
                    id: "add-partner",
                    class: "btn btn-success" %>
      </div>
    </div>
  </div>
</aside>

<% if presenter.partners.present? %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Banner</th>
      <th>Banner Link</th>
      <th class="text-center">Weight</th>
      <th class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: "partners/partner", collection: presenter.partners %>
    </tbody>
  </table>

<% else %>
  <br/>
  <div class="callout callout-info">
    <h5>Use this tab to add sponsor Partners to your Event Group</h5>
    <p>Partners are sponsors of your Event Group. They will be displayed on the Results page while your Event Group is live.</p>
  </div>
<% end %>
