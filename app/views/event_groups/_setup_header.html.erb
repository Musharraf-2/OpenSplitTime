<%# locals: (presenter:, breadcrumbs:) -%>

<header class="ost-header">
  <div class="container">
    <div class="ost-heading row">
      <div class="col">
        <div class="ost-title">
          <h1>
            <strong><%= name_with_concealed_indicator(presenter.event_group_name, presenter.concealed?) %></strong>
            <%= construction_status_badge(presenter.status) %>
          </h1>
          <ul class="breadcrumb breadcrumb-ost">
            <li class="breadcrumb-item"><%= link_to "Organizations", organizations_path %></li>
            <li class="breadcrumb-item"><%= link_to presenter.organization.name, organization_path(presenter.organization) %></li>
            <li class="breadcrumb-item"><%= link_to presenter.event_group.name, event_group_path(presenter.event_group) %></li>
            <li class="breadcrumb-item"><%= link_to "Setup", setup_event_group_path(presenter.event_group) %></li>
            <% breadcrumbs.each do |breadcrumb_text| %>
              <li class="breadcrumb-item active"><%= breadcrumb_text %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container w-75">
    <%= render "event_groups/setup_overview_widget", presenter: presenter %>
  </div>
</header>
