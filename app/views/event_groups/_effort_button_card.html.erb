<%# locals: (arrivals:, time_zone:, event_group:, title:) -%>

<div class="card">
  <h3 class="card-header"><strong><%= title %></strong></h3>
  <div class="card">
    <div class="card-body">
      <% if arrivals.present? %>
        <% arrivals.each do |arrival| %>
            <%= form_tag efforts_event_group_path(event_group),
                         method: :get,
                         class: "d-flex my-1",
                         data: { turbo_frame: "finish_line_effort" } do %>
              <%= hidden_field_tag "filter[bib_number]", arrival.bib_number %>
              <%= button_tag(effort_button_card_text(arrival, time_zone, event_group.multiple_events?),
                             type: :submit,
                             class: "btn btn-primary btn-lg text-lg-start w-100") %>
            <% end %>
        <% end %>
      <% else %>
        <div class="card">
          <h3 class="card-header">[None]</h3>
        </div>
      <% end %>
    </div>
  </div>
</div>
