<%# locals: (event_group:, unreviewed_count:, unmatched_count:) -%>

<%= turbo_stream.replace "pull_times_button", partial: "live/event_groups/pull_times_button", locals: { event_group: event_group, count: unreviewed_count } %>
<%= turbo_stream.replace "force_pull_times_button", partial: "live/event_groups/force_pull_times_button", locals: { event_group: event_group, count: unmatched_count } %>
<% if unreviewed_count.positive? %>
  <%= turbo_stream.prepend "toasts",
                           partial: "toasts/toast",
                           locals: {
                             title: "Raw Times Available",
                             body: "Raw times are available to pull. Click \"Pull Times\" to bring them into the Local Data Workspace.",
                             type: "info",
                           } %>
<% end %>
