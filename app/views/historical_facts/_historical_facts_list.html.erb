<%# locals: (historical_facts:) -%>

<table class="table">
  <thead>
  <tr>
    <th>Kind</th>
    <th class="text-center">Quantity</th>
    <th>Comments</th>
    <th>Name</th>
    <th>Gender</th>
    <th>Birthdate</th>
  </tr>
  </thead>
  <tbody>
  <% historical_facts.each do |fact| %>
    <tr class="align-middle">
      <td><%= historical_fact_kind_badge(fact.kind) %></td>
      <td class="text-center"><%= fact.quantity %></td>
      <td><%= fact.comments %></td>
      <td><%= fact.full_name %></td>
      <td><%= fact.gender %></td>
      <td><%= fact.birthdate %></td>
    </tr>
  <% end %>
  </tbody>
</table>
