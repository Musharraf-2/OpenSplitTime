<div id="effort_state_code_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>

  <% if country.nil? %>
    <%= carmen_subregion_select(:effort, :state_code, country, prompt: "Choose a country first") %>
  <% elsif country.subregions? %>
    <%= carmen_subregion_select(:effort, :state_code, country, prompt: "Choose a state or region") %>
  <% else %>
    <%= text_field(:effort, :state_code) %>
  <% end %>
</div>
