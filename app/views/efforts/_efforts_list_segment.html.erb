<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>
      Overall/<br>Gender
    </th>
    <th>Name</th>
    <th>Category</th>
    <th>From</th>
    <th>Year</th>
    <% unless presenter.segment_ends_at_finish? %>
      <th class="text-center">Finished?</th>
    <% end %>
    <th class="text-right"><%= presenter.time_header_text %></th>
  </tr>
  </thead>
  <tbody>
  <% presenter.filtered_segments.each do |segment| %>
      <tr>
        <td>
          <%= "#{segment.overall_rank}/#{segment.gender_rank}" %>
        </td>
        <td><strong><%= link_to segment.full_name, effort_path(segment) %></strong></td>
        <td><%= segment.bio_historic %></td>
        <td><%= segment.flexible_geolocation %></td>
        <td><%= segment.year_and_lap %></td>
        <% unless presenter.segment_ends_at_finish? %>
          <td class="text-center"><%= humanize_boolean(segment.finished?) %></td>
        <% end %>
        <td class="text-right"><%= ::TimeConversion.seconds_to_hms(segment.elapsed_seconds) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
