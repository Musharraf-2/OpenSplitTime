<%# locals: (effort_presenter:, roster_presenter:) -%>

<%= turbo_stream.replace dom_id(effort_presenter.effort, :check_in_button),
                        partial: "check_in_button",
                        locals: { effort: effort_presenter.effort } %>

<%= turbo_stream.replace dom_id(effort_presenter.effort, :roster_row),
                        partial: "entrant_for_roster",
                        locals: {
                          effort: effort_presenter.effort,
                          multiple_events: roster_presenter.multiple_events?,
                          started_efforts_present: roster_presenter.started_efforts.present?,
                        } %>

<%= turbo_stream.replace dom_id(effort_presenter.effort, :start_stop_buttons),
                        partial: "start_stop_buttons",
                        locals: { presenter: effort_presenter } %>

<%= turbo_stream.update dom_id(effort_presenter.effort, :effort_show_table),
                        partial: "split_times/effort_show_table",
                        locals: { presenter: effort_presenter } %>
