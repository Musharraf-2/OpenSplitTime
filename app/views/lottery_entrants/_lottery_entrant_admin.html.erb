<%= turbo_frame_tag dom_id(record) do %>
  <div class="card bg-light mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col">
          <h5 class="font-weight-bold"><%= record.name %></h5>
          <h5><%= pre_selected_badge_with_label(record) %></h5>
          <h6><%= record.flexible_geolocation %></h6>
          <h6><%= record.bio %></h6>
        </div>
        <div class="col text-right">
          <h4><span class="badge badge-secondary"><%= record.division_name %></span></h4>
          <h6 class="font-weight-bold"><%= "#{pluralize(record.number_of_tickets, 'ticket')}" %></h6>
          <%= link_to_entrant_edit(record) %>
          <%= link_to_entrant_delete(record) %>
        </div>
      </div>
    </div>
  </div>
<% end %>
