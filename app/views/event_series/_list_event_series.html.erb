<%# locals: (presenter:, event_series:) -%>

<% if event_series.present? || current_user&.authorized_to_edit?(presenter.organization) %>
  <hr/>

  <div class="row">
    <div class="col">
      <h4 class="font-weight-bold">Event Series</h4>
    </div>
    <% if current_user&.authorized_to_edit?(presenter.organization) %>
      <div class="col-auto">
        <%= link_to fa_icon("plus", text: "Add event series"),
                    new_organization_event_series_path(presenter.organization),
                    id: "add-event-series",
                    class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <% if event_series.present? %>
    <%= render "event_series/event_series_list", presenter: presenter, event_series: event_series %>
  <% else %>
    <br/>
    <h4>No event series are associated with this organization.</h4>
  <% end %>
<% end %>