<header class="ost-header">
  <div class="container">
    <div class="ost-heading row">
      <div class="ost-title col">
        <h1><strong><%= t('.change_your_password') %></strong></h1>
      </div>
    </div>
  </div>
</header>

<article class="ost-article container">
  <div class="row justify-content-center">
    <div class="col col-login">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
        <%= bootstrap_devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-floating mb-3">
          <%= f.password_field :password, autofocus: true, class: 'form-control' %>
          <%= f.label :password, t('.new_password') %>

          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length') %></small>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
          <%= f.label :password_confirmation, t('.confirm_new_password') %>
        </div>

        <div class="mb-3">
          <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</article>