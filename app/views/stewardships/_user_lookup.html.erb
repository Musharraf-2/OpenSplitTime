<%= form_tag organization_stewardships_path(@organization), method: :post do %>
  <div class="input-group">
    <%= text_field_tag :email,
                       params[:email],
                       placeholder: "email",
                       autofocus: true,
                       class: "form-control search-box" %>
    <span class="input-group-append">
        <%= button_tag(type: :submit, class: "btn btn-primary") do %>
            <i class="fas fa-search"></i> Add steward
        <% end %>
      </span>
  </div>
<% end %>
