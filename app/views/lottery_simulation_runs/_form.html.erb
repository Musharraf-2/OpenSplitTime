<%= render 'shared/errors', obj: @lottery_simulation_run %>

<div class="row">
  <div class="col-md-12">
    <%= form_with(model: @lottery_simulation_run, local: true, html: {class: "form-horizontal", data: {turbo: false}}) do |f| %>
      <div class="form-row">
        <div class="form-group col-md-4">
          <%= f.label :how_many_simulations? %>
          <%= f.file_field :requested_count, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit("Run simulations", class: "btn btn-primary") %>
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <div class="col">
            <span class="brackets">
                <%= link_to "Cancel", request.referrer || organization_lottery_lottery_simulation_runs_path(@organization, @lottery) %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
