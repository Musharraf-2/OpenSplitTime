<% content_for :title do %>
  <% "OpenSplitTime: Edit Organization - #{@organization.name}" %>
<% end %>

<header class="ost-header">
  <div class="container">
    <div class="ost-heading row">
      <div class="col">
        <div class="ost-title">
          <h1><strong><%= @organization.name %></strong></h1>
          <ul class="breadcrumb breadcrumb-ost">
            <li class="breadcrumb-item"><%= link_to 'Organizations', organizations_path %></li>
            <li class="breadcrumb-item"><%= link_to @organization.name, organization_path(@organization) %></li>
            <li class="breadcrumb-item active">Edit</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<article class="ost-article container">
  <%= render 'form' %>
  <hr>
  <%= link_to_delete_resource('Delete this organization', organization_path(@organization),
                              resource: @organization,
                              noteworthy_associations: [:events, :stewards, :courses],
                              class: "btn btn-danger") %>
</article>
