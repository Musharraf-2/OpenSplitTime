<div data-carmen-target="stateSelectWrapper">
  <% country = Carmen::Country.coded(parent_region) %>

  <% if country.nil? %>
    <%= carmen_subregion_select(model, :state_code, country, prompt: "Choose a country first") %>
  <% elsif country.subregions? %>
    <%= carmen_subregion_select(model, :state_code, country, prompt: "Choose a state or region") %>
  <% else %>
    <%= text_field(model, :state_code) %>
  <% end %>
</div>
