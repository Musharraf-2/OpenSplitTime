<% content_for :title do %>
  <% "OpenSplitTime: Edit Partner - #{@partner.name}" %>
<% end %>

<% if @partner.partnerable.is_a?(::EventGroup) %>
  <%= render "shared/mode_widget", event_group: @partner.partnerable %>
<% end %>

<header class="ost-header">
  <div class="container">
    <div class="ost-heading row">
      <div class="col">
        <div class="ost-title">
          <h1><strong>Edit Partner - <%= @partner.name %></strong></h1>
          <ul class="breadcrumb breadcrumb-ost">
            <li class="breadcrumb-item"><%= link_to "Organizations", organizations_path %></li>
            <li class="breadcrumb-item"><%= link_to @partnerable.organization.name, organization_path(@partnerable.organization) %></li>
            <li class="breadcrumb-item"><%= link_to @partnerable.name, polymorphic_path([@partnerable.organization, @partnerable]) %></li>
            <li class="breadcrumb-item">Partners</li>
            <li class="breadcrumb-item">Edit</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<article class="ost-article container">
  <%= render "form" %>
</article>
