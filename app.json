{
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:in-dyno",
        "heroku-redis:in-dyno"
      ],
      "buildpacks": [
        {
          "url": "heroku-community/chrome-for-testing"
        },
        {
          "url": "heroku/nodejs"
        },
        {
          "url": "heroku/ruby"
        },
      ],
      "env": {
        "GOOGLE_CHROME_CHANNEL": "stable",
        "WD_CHROME_PATH": "/app/.apt/usr/bin/google-chrome-stable"
      },
      "formation": {
        "test": {
          "quantity": 1,
          "size": "standard-2x"
        }
      },
      "scripts": {
        "test-setup": "bin/rails assets:precompile",
        "test": "bin/rspec"
      }
    }
  }
}
